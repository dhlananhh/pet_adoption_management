<odoo>
  <data>
    <record id="module_category_pet_adoption" model="ir.module.category">
      <field name="name">Pet Adoption</field>
      <field name="description">User groups for the Pet Adoption Management module.</field>
      <field name="sequence">10</field>
    </record>
    <record id="group_pet_adoption_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="module_category_pet_adoption" />
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="group_pet_adoption_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="category_id" ref="module_category_pet_adoption" />
      <field name="implied_ids" eval="[(4, ref('group_pet_adoption_user'))]" />
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>
    <record model="ir.sequence" id="seq_adoption_application">
      <field name="name">Adoption Application Sequence</field>
      <field name="code">adoption.application.sequence</field>
      <field name="prefix">APP</field>
      <field name="padding">5</field>
    </record>
  </data>
</odoo>
