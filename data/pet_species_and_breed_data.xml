<odoo>
  <data noupdate="1">
    <!-- Species -->
    <record id="pet_species_dog" model="pet.species">
      <field name="name">Dog</field>
    </record>
    <record id="pet_species_cat" model="pet.species">
      <field name="name">Cat</field>
    </record>

    <!-- Dog Breeds -->
    <record id="pet_breed_retriever" model="pet.breed">
      <field name="name">Golden Retriever</field>
      <field name="species_id" ref="pet_species_dog" />
    </record>
    <record id="pet_breed_shepherd" model="pet.breed">
      <field name="name">German Shepherd</field>
      <field name="species_id" ref="pet_species_dog" />
    </record>

    <!-- Cat Breeds -->
    <record id="pet_breed_siamese" model="pet.breed">
      <field name="name">Siamese</field>
      <field name="species_id" ref="pet_species_cat" />
    </record>
  </data>
</odoo>
