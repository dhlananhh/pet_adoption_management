<odoo>
  <data>
    <record id="adoption_application_view_form" model="ir.ui.view">
      <field name="name">adoption.application.view.form</field>
      <field name="model">adoption.application</field>
      <field name="arch" type="xml">
        <form string="Adoption Application">
          <header>
            <field name="stage_id" widget="statusbar" options="{'clickable': '1'}" />
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group>
              <field name="pet_id" />
              <field name="applicant_partner_id" />
              <field name="application_date" />
              <field name="company_id" groups="base.group_multi_company" />
            </group>
            <notebook>
              <page string="Motivation">
                <field name="motivation" />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" />
            <field name="activity_ids" />
            <field name="message_ids" />
          </div>
        </form>
      </field>
    </record>

    <record id="adoption_application_view_tree" model="ir.ui.view">
      <field name="name">adoption.application.view.tree</field>
      <field name="model">adoption.application</field>
      <field name="arch" type="xml">
        <tree string="Adoption Applications">
          <field name="name" />
          <field name="pet_id" />
          <field name="applicant_partner_id" />
          <field name="application_date" />
          <field name="stage_id" />
        </tree>
      </field>
    </record>

    <record id="adoption_application_action" model="ir.actions.act_window">
      <field name="name">Adoption Applications</field>
      <field name="res_model">adoption.application</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem
      id="adoption_application_menu"
      name="Applications"
      parent="pet_pet_menu_root"
      action="adoption_application_action"
      sequence="15" />
  </data>
</odoo>
